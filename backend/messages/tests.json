      "name": "OPTIONS request for CORS",
      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200
    },
    {
      "name": "Send message without auth",
      "method": "POST",
      "path": "/",
      "body": {
        "contactId": "2",
        "text": "Test message"
